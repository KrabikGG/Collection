<Window x:Class="Collection.FindBookByAuthorAndNameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collection"
        mc:Ignorable="d"
        Title="Пошук за автором та назвою" Height="250" Width="250">
    <Grid Height="234" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
        <TextBox x:Name="AuthorTextBox" HorizontalAlignment="Center" Margin="0,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="25"/>
        <Label Content="Введіть назву" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Введіть автора" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top"/>
        <Button x:Name="FindButton" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Height="30" Width="60" Click="FindButton_Click">
            <TextBlock x:Name="FindButton1" TextWrapping="Wrap" Text="Пошук"/>
        </Button>

    </Grid>
</Window>
