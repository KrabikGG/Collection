<Window x:Class="Collection.FindAllBooksByYearForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collection"
        mc:Ignorable="d"
        Title="Пошук за роком" Height="250" Width="250">
    <Grid HorizontalAlignment="Center" Width="250" Height="234" VerticalAlignment="Center">
        <ListBox x:Name="YearsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="61,54,61,54"/>
        <Label Content="Виберіть рік" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top"/>
        <Button x:Name="FindButton" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Height="30" Width="60">
            <TextBlock x:Name="FindButton1" TextWrapping="Wrap" Text="Пошук"/>
        </Button>
    </Grid>
</Window>
